<% layout("/layouts/boilerplate") %>

<style>
  .error-container {
    max-width: 600px;
    margin: 5rem auto;
    padding: 2rem 3rem;
    background-color: #ffe6e6;
    border: 2px solid #dc3545;
    border-radius: 12px;
    box-shadow: 0 4px 12px rgba(220, 53, 69, 0.3);
    font-family: 'Arial', sans-serif;
    color: #a71d2a;
    text-align: center;
  }

  h1 {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1.25rem;
    margin-bottom: 2rem;
  }

  a.btn-home {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background-color: #dc3545;
    color: white;
    text-decoration: none;
    font-weight: 600;
    border-radius: 8px;
    box-shadow: 0 2px 6px rgba(220, 53, 69, 0.6);
    transition: background-color 0.3s ease;
  }

  a.btn-home:hover {
    background-color: #a71d2a;
  }
</style>

<div class="error-container">
  <h1>Error <%= err.statusCode || 500 %></h1>
  <p><%= err.message || "Oops! Something went wrong." %></p>
  <a href="/listings" class="btn-home">Go to Home</a>
</div>
